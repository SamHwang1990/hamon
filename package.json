{
  "name": "@funnyecho/hamon",
  "version": "0.1.0",
  "description": "Event-driven architecture with varying types of hook",
  "jest": {
    "testRegex": "/scripts/jest/dont-run-jest-directly\\.js$"
  },
  "main": "./dist/index.js",
  "types": "./dist/hamon.d.ts",
  "files": [
    "dist"
  ],
  "prettier": "./scripts/prettier/.prettierrc.yml",
  "scripts": {
    "test": "cross-env NODE_ENV=development jest --config ./scripts/jest/config.source.js",
    "test:coverage": "cross-env NODE_ENV=development jest --config ./scripts/jest/config.source.js --coverage",
    "build": "tsc"
  },
  "author": "SamHwang1990 @funnyecho",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.17",
    "cross-env": "^6.0.3",
    "jest": "^24.9.0",
    "jest-extended": "^0.11.2",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/funnyecho/hamon.git"
  }
}
